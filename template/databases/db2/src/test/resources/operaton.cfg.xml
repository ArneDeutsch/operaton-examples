<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="processEngineConfiguration"
        class="org.operaton.bpm.engine.impl.cfg.StandaloneProcessEngineConfiguration">
    <property name="enforceHistoryTimeToLive" value="false" />
    <property name="jdbcUrl" value="jdbc:db2://localhost:50000/operaton" />
    <property name="jdbcUsername" value="db2inst1" />
    <property name="jdbcPassword" value="operaton" />
    <property name="jdbcDriver" value="com.ibm.db2.jcc.DB2Driver" />
    <property name="databaseSchemaUpdate" value="true" />
    <property name="deploymentResources">
      <list>
        <value>classpath*:*.bpmn</value>
        <value>classpath*:*.dmn</value>
      </list>
    </property>
  </bean>

  <bean id="processEngine" class="org.operaton.bpm.engine.spring.ProcessEngineFactoryBean">
    <property name="processEngineConfiguration" ref="processEngineConfiguration" />
  </bean>

</beans>
