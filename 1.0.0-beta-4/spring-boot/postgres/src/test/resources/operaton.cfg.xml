<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="processEngineConfiguration"
        class="org.operaton.bpm.engine.spring.SpringProcessEngineConfiguration">
    <property name="enforceHistoryTimeToLive" value="false" />
    <property name="jdbcUrl" value="jdbc:postgresql://localhost:5432/operaton" />
    <property name="jdbcUsername" value="operaton" />
    <property name="jdbcPassword" value="operaton" />
    <property name="jdbcDriver" value="org.postgresql.Driver" />
    <property name="databaseSchemaUpdate" value="true" />
  </bean>

  <bean id="processEngine" class="org.operaton.bpm.engine.spring.ProcessEngineFactoryBean">
    <property name="processEngineConfiguration" ref="processEngineConfiguration" />
  </bean>
</beans>
